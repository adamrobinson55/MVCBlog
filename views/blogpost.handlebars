<div>
  <h2>{{user.name}} says </h2>
  <p>{{title}}</p>
  <p>{{text}}</p>
</div>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Type Your Mind!:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-name">comment title:</label>
        <input class="form-input" type="text" id="comment-title" name="comment-title" />
      </div>
      <div class="form-group">
        <label for="comment-text">text:</label>
        <textarea class="form-input" id="comment-text" name="comment-text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  <div class="col-md-6 comment-list">
    <h3>Comments!</h3>

<div>
  {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{comment.title}}</h4>
      </div>
      <div class="row">
        <p> --- {{comment.text}}</p>
      </div>
    </div>
  {{/each}}
</div>

<script src="/js/blogpost.js"></script>