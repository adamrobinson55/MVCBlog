<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}} :3!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Type Your Mind!:</h3>

    <form class="form new-blogpost-form">
      <div class="form-group">
        <label for="blogpost-name">blogpost name:</label>
        <input class="form-input" type="text" id="blogpost-title" name="blogpost-title" />
      </div>
      <div class="form-group">
        <label for="blogpost-text">text:</label>
        <textarea class="form-input" id="blogpost-text" name="blogpost-text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogposts.length}}
  <div class="col-md-6 blogpost-list">
    <h3>The Innerworkings of your thoughts!:</h3>

    {{#each blogposts as |blogpost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a></h4>
      </div>
      <div="row">
        <p> --- {{blogpost.text}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blogpost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>
